<?xml version="1.0" encoding="UTF-8"?>
<!-- login.fxml -->
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" 
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controller.LoginController"
      spacing="10" 
      alignment="CENTER"
      style="-fx-padding: 20; -fx-background-color: #f0f0f0;">
    
    <children>
        <Label text="Roguelike Cards" style="-fx-font-size: 24px; -fx-font-weight: bold;" />
        <Label text="Вхід в систему" style="-fx-font-size: 18px;" />
        
        <GridPane hgap="10" vgap="10">
            <columnConstraints>
                <ColumnConstraints halignment="RIGHT" hgrow="NEVER" />
                <ColumnConstraints hgrow="SOMETIMES" />
            </columnConstraints>
            
            <children>
                <Label text="Логін:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
                <TextField fx:id="usernameField" promptText="Введіть логін" GridPane.rowIndex="0" GridPane.columnIndex="1" />
                
                <Label text="Пароль:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
                <PasswordField fx:id="passwordField" promptText="Введіть пароль" GridPane.rowIndex="1" GridPane.columnIndex="1" />
            </children>
        </GridPane>
        
        <HBox spacing="10" alignment="CENTER">
            <children>
                <Button text="Увійти" onAction="#handleLogin" style="-fx-min-width: 100;" />
                <Button text="Реєстрація" onAction="#handleRegister" style="-fx-min-width: 100;" />
            </children>
        </HBox>
        
        <Label fx:id="messageLabel" style="-fx-text-fill: red;" />
        
        <Hyperlink text="Забули пароль?" />
    </children>
</VBox>